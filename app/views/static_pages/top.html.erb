<section class="hero relative bg-cover bg-center h-screen flex flex-col justify-center items-center text-white" 
         style="background-image: url(<%= asset_path('top.svg') %>);">
  <!-- 背景のオーバーレイ（暗めの透明フィルター） -->
  <div class="absolute inset-0 bg-black opacity-50"></div>
  
  <!-- メインコンテンツ（テキスト・ボタン） -->
  <div class="relative z-10 text-center">
    <h1 class="text-5xl font-bold mb-4 leading-tight">
      <span class="text-blue-400">Good-Sleep-Joy</span> で快適な眠りを
    </h1>
    <p class="text-lg mb-6 max-w-2xl mx-auto leading-relaxed">
      毎日の睡眠を記録して、より良い睡眠習慣を手に入れよう。
    </p>
  </div>
</section>






<!-- 機能の説明 -->
<div class="mt-16 flex flex-col justify-center items-center">
  <h2 class="text-xl font-semibold mt-6 ">
    <i class="fa-solid fa-angles-down"></i>このアプリでできること
    <i class="fa-solid fa-angles-down"></i>
  </h2>
</div>


<div class="container mx-auto w-full text-black">
  <div class="border-4 rounded-lg p-4 m-16 hover:border-gray-500 transition-300 cursor-pointer">
  <!-- 左右分割 -->
    <div class="flex flex-wrap w-full md:flex-nowrap gap-4">
      
      <!-- 左側: -->
      <div class="w-full md:w-1/2 flex flex-col justify-center">
        <div class="text-center mx-auto">
          <strong class="font-bold text-xl mt-2">アイテム共有機能</strong>
          <p class="text-sm mt-4">
          あなたの睡眠を支えるアイテムを他のユーザーとシェアしましょう！
          </p>
          <div class="text-sm mt-4">
            <div class="flex justify-start gap-4">
              <%= image_tag "check.png", alt: '起床時間のアイコン'%>
              <p>お気に入りの枕</p>
            </div>
            <div class="flex justify-start gap-4">
              <%= image_tag "check.png", alt: '起床時間のアイコン'%>
              <p>よく眠れるアイマスク</p>
            </div>
            <div class="flex justify-start gap-4">
              <%= image_tag "check.png", alt: '起床時間のアイコン'%>
              <p>リラックスグッズ...など</p>
            </div>
          </div>
          <div class="flex justify-center gap-4 mt-4 text-sm">
            <%= image_tag "exclamation.png", alt: 'エクスクラメーションマークのアイコン'%>
            <p>ログインで投稿可能</p>
            <%= image_tag "exclamation.png", alt: 'エクスクラメーションマークのアイコン'%>
          </div>
        </div>
        
        <!-- ボタン -->
        <div class="flex flex-row flex-wrap justify-center gap-4 mt-4">
          <%= link_to "投稿する", new_item_post_path, class: "bg-blue-500 text-white rounded-lg px-6 py-2 hover:bg-blue-600" %>
          <%= link_to "投稿一覧", item_posts_path, class: "bg-blue-500 text-white rounded-lg px-6 py-2 hover:bg-blue-600" %>
        </div>
      </div>

      <!-- 右側（スペース） -->
      <div class="w-full md:w-1/2">
        <img src="https://i.gyazo.com/b8579151990c976108c3aad1130d82f3.gif" alt="イメージ">
      </div>
    </div>
  </div>
</div>

