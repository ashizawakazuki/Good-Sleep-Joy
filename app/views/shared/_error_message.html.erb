<!-- objectにユーザーが入力したフォームのデータが入っていて、バリデーションエラーがあるかどうかをany?で確認 -->
<!-- エラーがある場合はこのパーシャルが表示 -->

<% if object.errors.any? %>
  <div class = "mb-4 p-4 bg-red-100">
    <ul>
      <!-- エラーの内容を順番にerrorに入れて、一つずつ表示 -->
      <% object.errors.each do |error| %>
       <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>