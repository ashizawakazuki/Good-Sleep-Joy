<% content_for(:title, 'パスワード再設定') %>
<div class="max-w-lg mx-auto p-4">
  <h1 class="text-xl font-bold my-20 text-center">パスワード再設定</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="flex flex-col mb-6">     
    <%= f.label :password, "新しいパスワード", class: "text-lg font-medium text-gray-700 mb-2" %>  
    <%= f.password_field :password, placeholder: "6文字以上", class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>   
  </div>

  <div class="flex flex-col mb-6">     
    <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "text-lg font-medium text-gray-700 mb-2" %>  
    <%= f.password_field :password_confirmation,  placeholder: "6文字以上", class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>   
  </div>

  <div class="text-center my-20"> 
    <!-- 送信ボタンのデザイン -->
    <%= f.submit "再設定", class: "bg-sky-100 rounded-2xl px-6 py-2 hover:bg-sky-300 shadow-xl" %> 
  </div>
<% end %>

