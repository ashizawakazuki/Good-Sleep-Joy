<% content_for(:title, 'パスワードリセット') %>
<div class="max-w-lg mx-auto p-4">
  <h1 class="text-xl font-bold my-20 text-center">パスワードリセット</h1>
  <p class ="mb-6 text-center">リセット用メールを送信します</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/error_message', object: f.object %>

  <div class="flex flex-col mb-6"> <!-- 以下、form_withで使えるようになったもの -->
      <%= f.label :email, "メールアドレス", class: "text-lg font-medium text-gray-700 mb-2" %>  
      <%= f.email_field :email, autofocus: true, placeholder: "登録済みのメールアドレスを入力",class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none " %>   
  </div>


  <div class="text-center my-20"> 
      <!-- 送信ボタンのデザイン -->
      <%= f.submit "送信", class: "bg-sky-100 rounded-2xl px-6 py-2 hover:bg-sky-300 shadow-xl" %> 
    </div>
<% end %>
