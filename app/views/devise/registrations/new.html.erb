<div class="max-w-lg mx-auto p-4">
  <h1 class="text-xl font-bold my-20 text-center">新規登録画面</h1>
  <!-- resourceは自動的に用意している変数で、「現在操作しているユーザーのオブジェクト」を指す（Userモデルの空のオブジェクトのこと） -->
  <%= form_with model: resource, url: user_registration_path, method: :post do |f| %>
    <%= render 'shared/error_message', object: f.object %>

    <div class="flex flex-col mb-6"> <!-- 以下、form_withで使えるようになったもの -->
      <%= f.label :name, "名前", class: "text-lg font-medium text-gray-700 mb-2" %>  
      <%= f.text_field :name, placeholder: "ニックネーム可", class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>   
    </div>
  
    <div class="flex flex-col mb-6"> <!-- 以下、form_withで使えるようになったもの -->
      <%= f.label :email, "メールアドレス", class: "text-lg font-medium text-gray-700 mb-2" %>  
      <%= f.email_field :email, class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>   
    </div>

    <div class="flex flex-col mb-6">     
      <%= f.label :password, "パスワード", class: "text-lg font-medium text-gray-700 mb-2" %>  
      <%= f.password_field :password, placeholder: "6文字以上", class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>   
    </div>
  
    <!--「flex-col」でラベルとフォームを縦列に並べる（これを指定しないと横になる）-->
    <div class="flex flex-col mb-6">     
      <%= f.label :password_confirmation, "パスワード確認", class: "text-lg font-medium text-gray-700 mb-2" %>  
      <%= f.password_field :password_confirmation,  placeholder: "6文字以上", class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>   
    </div>

    <div class="text-center my-20"> 
      <!-- 送信ボタンのデザイン -->
      <%= f.submit "新規登録", class: "bg-sky-100 rounded-2xl px-6 py-2 hover:bg-sky-300 shadow-xl" %> 
    </div>
  <% end %>

  <div class="flex flex-col text-base my-4 text-center">
    <p>アカウントを持っている方はこちら</p>
    <%= link_to "ログイン", user_session_path, class: "hover:underline text-sky-500" %>
  </div>
</div>