<!-- habit_posts_controllerのshowアクションから持ってきたhabit_comment（空のインスタンス）を指定-->
<!-- form_withの引数にはモデルクラスのインスタンスを指定する-->
<!-- URLでリクエスト先を指定（最終的にはhabit_controllerのcreateアクションでridirect_toで投稿詳細画面を表示-->
<div>
  <%= form_with model: habit_comment, url: habit_post_habit_comments_path(habit_post) do |f| %>
    <div class="flex flex-col mb-6">
      <%= f.label :"コメント" %>
      <%= f.text_area :body, class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
      <div class="text-center p-4"> 
        <%= f.submit "コメントする", class: "bg-sky-100 rounded-2xl px-6 py-2 hover:bg-sky-300 shadow-xl" %>
      </div>
    </div>
  <% end %>
</div>