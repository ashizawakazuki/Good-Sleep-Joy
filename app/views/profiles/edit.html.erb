<% content_for(:title, 'マイページ詳細画面') %>
<div class="max-w-lg mx-auto p-4">
  <h1 class="text-xl font-bold my-20 text-center">マイページ編集画面</h1>
  <%= form_with model: @user, url: profile_path, method: :put do |f| %>
  
    <%= render 'shared/error_message', object: f.object %>
    <div class="flex flex-col mb-6"> 
      <%= f.label :avatar, "プロフィール画像", class: "text-lg font-medium text-gray-700 mb-2" %>  
      <div class = "my-4 ">
        <% if @user.avatar.present? %>
          <%= image_tag @user.avatar.url, alt: "現在のプロフィール画像", class: "w-48 h-48 object-cover shadow-lg border border-gray-200" %>
        <% end %>
      </div>
      <%= f.file_field :avatar, class: "form-control", accept: 'image/*' %>
      <%= f.hidden_field :avatar_cache %>   
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :name, "ユーザーネーム", class: "text-lg font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, placeholder: "ニックネーム可（6文字以内）" , class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :email, "メールアドレス", class: "text-lg font-medium text-gray-700 mb-2" %>
      <%= f.text_field :email, class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :wake_up_time, "起床時間", class: "text-lg font-medium text-gray-700 mb-2" %>
      <%= f.time_field :wake_up_time, class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>
    <div class="flex flex-col mb-6">
      <%= f.label :bed_time, "就寝時間", class: "text-lg font-medium text-gray-700 mb-2" %>
      <%= f.time_field :bed_time, class: "border border-gray-300 rounded-lg px-4 py-2 focus:ring focus:ring-blue-300 focus:outline-none" %>
    </div>
    <div class="text-center my-20"> 
      <!-- 送信ボタンのデザイン -->
      <%= f.submit "更新する", class: "bg-sky-100 rounded-2xl px-6 py-2 hover:bg-sky-300 shadow-xl" %> 
    </div>
  <% end %>
</div>